.Header
	width 100%
	height header-height
	position fixed
	top 0
	left 0
	background-color black
	z-index 1001
	transition margin 0.3s
	+below('m')
		height header-height-mobile

	body.home-page &
		position absolute
	body.home-page.hide-header &
		top header-height - header-height - header-height
		position fixed
	body.home-page.show-header &
		margin-top header-height


	// body.our-work-page &
