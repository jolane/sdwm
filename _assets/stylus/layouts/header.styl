	&-inner
		height 100%
		width 100%
		padding 0 5%
		display flex
		flex-direction row
		justify-content space-between
		align-items center
		+below('m')
			padding 0 8%
		+above(1440px)
			width 1420px
			margin 0 auto
			position relative

	&-logo
		width 120px
		height 35px
		position relative
		color white
		display block
		+below('m')
			width 100px
			height 29px
			z-index 1001
		+below('s')
			width 90px
			height 26px
			z-index 1001
