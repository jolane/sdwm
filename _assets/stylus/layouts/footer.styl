.Footer
	background-color gray
	font-size 0.875em
	line-height 1.6
	a
		text-decoration underline
		&:hover
			text-decoration none

	&-inner
		@extend .Section
		height 100%
		display flex
		justify-content flex-start
		align-items flex-start
		padding-top 3em
		padding-bottom 3em
		position relative
		+below('m')
			flex-direction column
			align-items flex-start

	&-col
		margin-right 52px
		+below('m')
			margin 0 0 1.5em 0
			text-align left
		&:first-child
			margin-right 100px
			+below('m')
				margin 0
		&:last-child
			margin-left auto
			+below('m')
				display none
		&:nth-child(3)
			+below('m')
				position absolute
				right 8%

	address
		font-style normal

	&-heading
		display block
		+below('m')
			display none
