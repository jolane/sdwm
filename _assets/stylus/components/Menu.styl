.Menu
	width 1.5em
	height 1.5em
	z-index 1001
	transition all 0.3s ease-out
	cursor pointer
	position relative

	body.nav-open &
		transform rotate(45deg)

	&:after
		content ''
		display block
		width 100%
		height 24%
		background-color white
		position absolute
		left 0
		top 38%

	&:before
		content ''
		display block
		height 100%
		width 24%
		background-color white
		position absolute
		left 38%
		top 0
