.FromArchive
	@extend .Section
	padding-top 4vw

	&-header
		display flex
		flex-direction row
		justify-content space-between
		align-items baseline

	&-heading
		margin-bottom 5em
		font-family M
		+below('m')
			margin-bottom 1.5em

	&-list
		padding 0
	&-item
		font-size (54/16)em
		list-style-type none
		font-family BB
		html.no-touchevents ^[0]-list:hover &
			color #231f20
		html.no-touchevents ^[0]-list:hover &:hover
			color white
		+below('m')
			font-size 4.2vw
	&-super
		font-size 0.3em
		color gray_text
		vertical-align super
