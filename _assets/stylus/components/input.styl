font-color = gold
border-color = gold

.Input
	width 100%
	height 2.5em
	display block
	position relative
	color font-color
	font-size 12px
	font-family Freight
	&:after
		content ''
		display block
		height 1px
		width 100%
		background-color border-color
		position absolute
		bottom 0
		left 0

	&-field
		display block
		width 100%
		height 1.4em
		line-height 1.4em
		box-sizing content-box
		border 0
		position relative
		z-index 2
		background-color transparent
		border-radius 0
		appearance none
		outline none
		padding 1em 0 0.15em 0
		option
			color black

	&-label
		position absolute
		height 1em
		line-height 1em
		display block
		top 1.2em
		left 0
		z-index 1
		display block
		transition all 0.05s
		color font-color
		box-sizing content-box

		^[0].is-populated &
			font-size 0.7em
			line-height 1
			top 0.5em
			opacity 0.8



	&-arrow
		position absolute
		z-index 1
		width 0.35em
		height 0.35em
		bottom 0.5em
		right 0.2em
		border-bottom 1px solid font-color
		border-left 1px solid font-color
		transform rotate(-45deg)
