.LCU
	display flex
	flex-direction column
	font-size 1rem
	+below('m')
		display flex
		flex-direction row
		justify-content center
		font-size 3.4vw

	&-word
		font-family BB
		width 5.4em
		height 5.4em
		border 1px solid white
		display flex
		justify-content center
		align-items center
		text-align center
		border-radius 50%
		line-height 1
		position relative
		margin-bottom 3em
		padding-top 0.2em
		&:after
			content ''
			display block
			position absolute
			top 100%
			left 50%
			height 3em
			width 1px
			background-color white
			+below('m')
				width 2em
				height 1px
				top 50%
				left 100%

		&:last-child
				margin 0
				&:after
					display none
		+below('m')
			margin-right 2em
